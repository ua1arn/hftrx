##############################################################################################
# 
# On command line:
#
# make all = Create project
#
# make clean = Clean project files.
#
# To rebuild project do "make clean" and "make all".
#

##############################################################################################
# Start of default section
# sun50iw9p1 Allwinner T507/T517/T507-H/T517-H (HelperBoarf T507)

#TRGT2 = arm-none-eabi
TRGT2 = aarch64-none-elf
TRGT = $(TRGT2)-

XFEL = ../../tools/xfel-windows-v1.3.4/xfel
BUSYBOX = busybox

#UADEFS += -D"WITHSMPSYSTEM"

PRJROOT := ../..
OBJDIR = x
# Define project name here
PROJECT = tc1_awt507_64
PROJECT64 = tc1_awt507_64

# Define linker script file here
LDSCRIPT_BOOT = ./allwnr_t507_boot.ld
LDSCRIPT_APP = ./allwnr_t507_app64.ld
ARCHDIR = $(PRJROOT)/arch/aw_t507

# List all user C define here, like -D_DEBUG=1
UDEFS += -D"NDEBUG"=1 -D"CPUSTYLE_T507"=1 -D"CPUSTYLE_CA53"=1
#UDEFS += -D"USE_HAL_DRIVER"=1 -D"USE_FULL_LL_DRIVER"=1
#
CC   = $(TRGT)gcc
GPP   = $(TRGT)g++
CP   = $(TRGT)objcopy
AS   = $(TRGT)gcc -x assembler-with-cpp
SIZE = $(TRGT)size --format=sysv --radix=16
HEX  = $(CP) -O ihex
BIN  = $(CP) -O binary
AR   = $(TRGT)ar rcs --plugin ../libexec/gcc/$(TRGT2)/13.2.1/liblto_plugin.dll
OBJDUMP = $(TRGT)objdump

# ARM Cortex-A53 Quad-Core (r0p4, revidr=0x80)

CORE = -mcpu=cortex-a53+fp+simd -momit-leaf-frame-pointer --specs=nosys.specs
#CORE = -mcpu=cortex-a53 -mfloat-abi=hard -mfpu=neon-vfpv4

# Define optimisation level here
#OPT = -Og
#OPT = -Ofast -flto
OPT = -Ofast

CMSISDIR = $(PRJROOT)/CMSIS_6/CMSIS
USBXDIR = $(PRJROOT)/src/hal

# List all default C defines here, like -D_DEBUG=1
DDEFS = 

# List all default ASM defines here, like -D_DEBUG=1
DADEFS = -D__ASSEMBLY__=1
# List all default directories to look for include files here
DINCDIR = \
	$(ARCHDIR) \
	$(USBXDIR) \
	$(CMSISDIR)/Core/Include $(CMSISDIR)/Core/Source

# List the default directory to look for the libraries here
#DLIBDIR = $(CMSISDSPDIR)/Lib/GCC

# List all default libraries here
#DLIBS = -lm -larm_cortexA9lneon_math
#DLIBS = -lm -larm_cortexA9lfdp_math
DLIBS = -lm
#
#
# End of default section
##############################################################################################

##############################################################################################
# Start of user section
#

# Define ASM defines here
UADEFS += 

# List C source files here
CSRC +=

# List C++ source files here
CPPSRC +=

# List ASM source files here
ASRC +=

# List all user directories here
UINCDIR += $(PRJROOT) $(PRJROOT)/inc

# List the user directory to look for the libraries here
ULIBDIR +=

# List all user libraries here
ULIBS += 

# taken from
# https://stackoverflow.com/questions/2483182/recursive-wildcards-in-gnu-make/18258352#18258352
rwildcard = $(foreach d, $(wildcard $(1:=/*)), $(call rwildcard, $(d), $(2)) $(filter $(subst *, %, $(2)), $(d)))

SRCDIRS += $(PRJROOT)/src
SRCDIRS += $(ARCHDIR)

ifeq (1, 1)
# ST USB DEVICE
MDLWUSBDIR = $(PRJROOT)/lib/Middlewares/ST/STM32_USB_Device_Library
DINCDIR += $(MDLWUSBDIR)/Core/Inc
SRCDIRS += $(MDLWUSBDIR)
endif

ifeq (1, 0)
# ST USB HOST
MDLWHOSTDIR = $(PRJROOT)/lib/Middlewares/ST/STM32_USB_Host_Library
DINCDIR += $(MDLWHOSTDIR)/Core/Inc
SRCDIRS += $(MDLWHOSTDIR)
endif

# cmsis-dsp
include ../cmsis_dsp.mak

# CherryUSB
include ../cherryusb.mak

# tinyusb
include ../tinyusb.mak

# rt-thread
include ../rtthread.mak

# lvgl
include ../lvgl.mak

# LuPng
include ../lupng.mak

# FreeRTOS
include ../freertos.mak

# btstack
include ../btstack.mak

# litehtml
include ../litehtml.mak

# LWIP
include ../lwip.mak

# custom application
include ../custom0.mak

CSRC += $(call rwildcard, $(SRCDIRS), *.c)
CPPSRC += $(call rwildcard, $(SRCDIRS), *.cpp)

# not all .S files in directory need
#ASRC += $(call rwildcard, $(SRCDIRS), *.S)
ASRC_APP += $(PRJROOT)/src/crt_CortexA53_CPUn.S
ASRC_BOOT += $(PRJROOT)/src/crt_CortexA53.S
ASRC_APP += $(ASRC_BOOT)

VPATH = $(PRJROOT)

#
# End of user defines
##############################################################################################


INCDIR  = $(patsubst %,-I%,$(DINCDIR) $(UINCDIR))
LIBDIR  = $(patsubst %,-L%,$(DLIBDIR) $(ULIBDIR))
DEFS    = $(DDEFS) $(UDEFS)
ADEFS   = $(DADEFS) $(UADEFS)

OBJSA_APP 	+= $(patsubst $(PRJROOT)/%.S,$(OBJDIR)/%.o, $(ASRC_APP))
OBJSA_BOOT 	+= $(patsubst $(PRJROOT)/%.S,$(OBJDIR)/%.o, $(ASRC_BOOT))
OBJSC 	+= $(patsubst $(PRJROOT)/%.c,$(OBJDIR)/%.o, $(CSRC))
OBJSCPP 	+= $(patsubst $(PRJROOT)/%.cpp,$(OBJDIR)/%.o, $(CPPSRC))

OBJS = $(OBJSC) $(OBJSCPP)

LIBS    = $(DLIBS) $(ULIBS)

MCFLAGS = \
	$(CORE) \
	-fno-math-errno -funroll-loops \
	-fgraphite-identity \
	-ffunction-sections \
	-fdata-sections \
	-ffat-lto-objects \
	-ftree-vectorize
#
#ASFLAGS = $(MCFLAGS) $(OPT) -g -gdwarf-2 -Wa,-amhls=$(<:.S=.lst) $(ADEFS)
ASFLAGS = $(MCFLAGS) $(OPT) -g -gdwarf-2 $(ADEFS)
#CPFLAGS = $(MCFLAGS) $(OPT) -gdwarf-2 -mthumb-interwork -fomit-frame-pointer -Wall -fverbose-asm -Wa,-ahlms=$(<:.c=.lst) $(DEFS)
CPFLAGS = $(MCFLAGS) $(OPT) -gdwarf-2 -fomit-frame-pointer -Wall $(DEFS) $(MAKE_DEFINES)

# see also -Xlinker --print-gc-sections
LDFLAGS_BOOT = $(MCFLAGS) $(OPT) -nostartfiles  -Xlinker --gc-sections -T$(LDSCRIPT_BOOT) -Wl,-Map=$(PROJECT)_boot.map,--cref $(LIBDIR) -Wl,--no-warn-rwx-segment
LDFLAGS_APP = $(MCFLAGS) $(OPT) -nostartfiles  -Xlinker --gc-sections -T$(LDSCRIPT_APP) -Wl,-Map=$(PROJECT)_app.map,--cref $(LIBDIR) -Wl,--no-warn-rwx-segment

# Generate dependency information
CPFLAGS += -MD -MP -MF ./$(@D)/$(@F).d
ASFLAGS += -MD -MP -MF ./$(@D)/$(@F).d

# Experemental optimisation flags
#CPFLAGS += -fno-inline-small-functions 
#CPFLAGS += -fno-inline-functions 
#CPFLAGS += -fwhole-program


#
# makefile rules
#

.PHONY: all bootloader flash clean

all: APP2 $(PROJECT)_app.alw32

allZ:
	@echo Src
	@echo $(abspath $(CSRC))
	@echo Obj at $(OBJDIR)
	@echo $(abspath $(OBJS))

bootloader: BOOT2
	$(BUSYBOX) grep -E -e ' SystemDRAMInit$$' -e ' SystemExecAARCH64$$' $(PROJECT)_boot.map | $(BUSYBOX) awk -e '{ print $$2, "=", $$1 }' | $(BUSYBOX) sort
	./egontool -base 0x00020000 -reset 0x00020100 $(PROJECT)_boot.bin fsbl.bt0
	
# Take from tc1_t507_boot.map - address of SystemDRAMInit, SystemExecAARCH64
ifeq (1, 1)
# T507
SystemDRAMInit = 0x0002d780
SystemExecAARCH64 = 0x00029514
DDRINIT=ddrinit_t507
else
# H616
#SystemDRAMInit = 0x0002d404
#SystemExecAARCH64 = 0x0002920c
#DDRINIT=ddrinit_h616
# H618 + LPDDR4
SystemDRAMInit = 0x0002c490
SystemExecAARCH64 = 0x00029014
DDRINIT=ddrinit_h618
endif

# Invoke SystemInit 
ddrinit_h616: ddrinit_h616_lpddr3.bin
	$(XFEL) write 0x00028000 ddrinit_h616_lpddr3.bin
	$(XFEL) exec $(SystemDRAMInit)
	$(BUSYBOX) sleep 1s

ddrinit_h618: ddrinit_h618_lpddr4.bin
	$(XFEL) write 0x00028000 ddrinit_h618_lpddr4.bin
	$(XFEL) exec $(SystemDRAMInit)
	$(BUSYBOX) sleep 1s

ddrinit_t507: ddrinit_t507_lpddr4.bin
	$(XFEL) write 0x00028000 ddrinit_t507_lpddr4.bin
	$(XFEL) exec $(SystemDRAMInit)
	$(BUSYBOX) sleep 1s

ddrinit_t507_ ddrinit_h618_:
	$(XFEL) ddr lpddr4
	$(BUSYBOX) sleep 1s

app_run: $(PROJECT)_app.alw32 $(DDRINIT)
	$(XFEL) write 0x40000000 $(PROJECT)_app.alw32
	$(XFEL) exec 0x40000100

app_run64: $(PROJECT)_app.alw32 $(DDRINIT)
	$(XFEL) write 0x40000000 $(PROJECT)_app.alw32
	$(XFEL) exec $(SystemExecAARCH64)

# debug for bootloader - check .ld file
_app_run: bootloader
	$(XFEL) write 0x00028000 fsbl.bt0
	$(XFEL) exec 0x00028000 

flash:
	$(XFEL) spinor write 0x00000000 fsbl.bt0
	$(XFEL) spinor write 0x00040000 $(PROJECT)_app.alw32

erase:
	$(XFEL) spinor erase 0x00000000 1024
	$(XFEL) spinor erase 0x00040000 1024

BOOT2: $(PROJECT)_boot.elf $(PROJECT)_boot.bin

APP2: $(PROJECT)_app.elf $(PROJECT)_app.bin
	
$(PROJECT)_app.alw32: $(PROJECT)_app.bin
	./stm32image -v 1 -l 0x40000100 -e 0x40000100 -s $(PROJECT)_app.bin -d $@

$(PROJECT)_app.alw32_TEST: $(PROJECT)_app.bin
	./stm32image -v 0 \`$(BUSYBOX) -l 0x40000100 -e `grep -E -e ' Reset_Handler$$' $(PROJECT)_app.map | cut -F 2` -s $(PROJECT)_app.bin -d $@\`

$(OBJSC):
	@mkdir -p $(@D)
	$(CC) -o $@ -std=gnu23 -Wstrict-prototypes -c $(CPFLAGS) $(INCDIR) $(addprefix $(PRJROOT)/, $(patsubst $(OBJDIR)/%, %, $(patsubst %.o, %.c, $@)))

$(OBJSCPP):
	@mkdir -p $(@D)
	$(GPP) -o $@ -std=gnu++17 -frtti -fexceptions -c $(CPFLAGS) $(INCDIR) $(addprefix $(PRJROOT)/, $(patsubst $(OBJDIR)/%, %, $(patsubst %.o, %.cpp, $@)))

$(OBJSA_APP) $(ZOBJSA):
	@mkdir -p $(@D)
	$(AS) -o $@ -c $(ASFLAGS) $(INCDIR) $(addprefix $(PRJROOT)/, $(patsubst $(OBJDIR)/%, %, $(patsubst %.o, %.S, $@)))

# add libsun50iw9p1_spinor.a 
%_boot.elf: $(OBJS) $(OBJSA_BOOT) $(LDSCRIPT_BOOT)
	$(GPP) $(OBJS) $(OBJSA_BOOT) $(LDFLAGS_BOOT) $(LIBS) -o $@
	$(SIZE) $@

%_app.elf: $(OBJS) $(OBJSA_APP) $(LDSCRIPT_APP)
	$(GPP) $(OBJS) $(OBJSA_APP) $(LDFLAGS_APP) $(LIBS) -o $@
	$(SIZE) $@

%hex: %elf
	$(HEX) $< $@
	$(OBJDUMP) -d $< >$(PROJECT)_app.lst

%bin: %elf
	$(BIN) $< $@
	$(OBJDUMP) -d $< >$(PROJECT)_app.lst

clean: version
	-$(RM) -R $(OBJDIR)
	-$(RM) fsbl.bt0
	-$(RM) $(PROJECT)_boot.elf $(PROJECT)_boot.map
	-$(RM) $(PROJECT)_app.elf $(PROJECT)_app.map
	-$(RM) $(PROJECT)_app.alw32 $(PROJECT)_app.bin $(PROJECT)_boot.bin 
	-$(RM) $(PROJECT64)_app.elf $(PROJECT64)_app.map
	-$(RM) $(PROJECT64)_app.alw32 $(PROJECT64)_app.bin $(PROJECT64)_boot.bin
	-$(RM) $(PROJECT)_app.lst 

version:
	$(CC) --version
	
# 
# Include the dependency files, should be the last of the makefile
#
-include $(call rwildcard, $(OBJDIR), *.d)

# *** EOF ***
